<div class="{% if slugField.vars.required %}required {% endif %}field{% if slugField.vars.errors|length > 0 %} error{% endif %} ui loadable form">
    {{ form_label(slugField) }}
    {% if resource.id == null or resource.slug == null %}
        {{ form_widget(slugField, {'attr': {'data-url': path('monsieurbiz_sylius_cms_page_ajax_generate_page_slug'), 'data-parent': app.request.attributes.get('id')}}) }}
    {% else %}
        <div class="ui action input">
            {{ form_widget(slugField, {'attr': {'readonly': 'readonly', 'data-url': path('monsieurbiz_sylius_cms_page_ajax_generate_page_slug')}}) }}
            <span class="ui icon button toggle-page-slug-modification">
            <i class="lock icon"></i>
        </span>
        </div>
    {% endif %}
    {{ form_errors(slugField) }}
</div>
